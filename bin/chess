#!/bin/bash

# Get the directory this script is in
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# Go one directory up
PARENT_DIR="/home/judah/CCVS"

# Enter the src directory
cd "$PARENT_DIR/src" || { echo "Failed to enter src directory"; exit 1; }

# Run main.py with all arguments passed to this script
$PARENT_DIR/.chessPython/bin/python3 main.py "$@"
